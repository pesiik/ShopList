<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/product_image"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_product"
        android:text="@string/name_test"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/icon"
        android:layout_toEndOf="@id/icon"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_product"
        android:layout_toRightOf="@+id/name_product"
        android:layout_toEndOf="@+id/name_product"
        android:text="@string/price_test"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rub_symbol"
    android:text="@string/rub_symbol"
    android:layout_marginLeft="4dp"
    android:layout_marginStart="4dp"

    android:layout_toRightOf="@id/price_product"
    android:layout_toEndOf="@id/price_product"
    android:textSize="15sp"
    android:textStyle="normal"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/count_products"
        android:text="@string/count_test"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_below="@id/price_product"
        android:textStyle="bold"
        android:layout_marginEnd="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/count_word"
        android:text="@string/count_word"
        android:layout_below="@id/price_product"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/count_products"
        android:layout_toStartOf="@id/count_products" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_product"
        android:text="@string/description_test"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/icon"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="20sp"
        android:textStyle="bold"/>



</RelativeLayout>